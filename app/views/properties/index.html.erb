<div class="row-fluid">
  <%- model_class = Property -%>
  <div class="page-header">
    <h3><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h3>
  </div>
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:title) %></th>
        <th><%= model_class.human_attribute_name(:address) %></th>
        <th><%= model_class.human_attribute_name(:property_type) %></th>
        <th><%= model_class.human_attribute_name(:status) %></th>
        <th><%= model_class.human_attribute_name(:area) %></th>
        <th><%= model_class.human_attribute_name(:price) %></th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @properties.each do |property| %>
        <tr>
          <td><%= property.title %></td>
          <td><%= property.address %></td>
          <td><%= property.property_type %></td>
          <td><%= property.status %></td>
          <td><%= property.area %></td>
          <td><%= property.price %></td>
          <td>
            <%= link_to property do %><i class="icon-eye-open"></i><% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_property_path,
              :class => 'btn btn-primary' %>
</div>
