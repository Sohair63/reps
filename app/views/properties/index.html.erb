<div class="row-fluid">
  <div class="page-header">
    <h3>Real Estate</h3>
  </div>

  <%= paginate @properties %>

  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th><%= sortable 'title', 'Title' %></th>
        <th><%= sortable 'address', 'Adress' %></th>
        <th><%= sortable 'property_type', 'Type' %></th>
        <th><%= sortable 'status', 'Status' %></th>
        <th><%= sortable 'area', 'Area' %></th>
        <th><%= sortable 'price', 'Price' %></th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @properties.each do |property| %>
        <tr>
          <td><%= property.title %></td>
          <td><%= property.address %></td>
          <td><%= property.property_type %></td>
          <td><%= property.status %></td>
          <td><%= property.area %></td>
          <td><%= property.price %></td>
          <td>
            <%= link_to property do %><i class="icon-eye-open"></i><% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_property_path,
              :class => 'btn btn-primary' %>
</div>
